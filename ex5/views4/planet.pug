//- Task 14 (Handling complex data in JSON format). Point 1
doctype html
html
    head
        meta(charset='utf-8')
        meta(name='viewport', content='width=device-width, initial-scale=1, shrink-to-fit=no')
        link(href='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css', rel='stylesheet')
        title Planet Details
    body(class="p-4")
        div(class="d-flex justify-content-between pb-3")
            h1 #{planet.name ? planet.name : 'Not found'}
            a(href="/planets")
                button(class="btn btn-link") Back
        
        div(class="card mt-4")
            div(class="card-body")
                h5(class="card-title") Information
                h6(class="card-subtitle mb-2 text-muted") Climate
                p(class="card-text") #{planet.climate ? planet.climate : 'Not found'}

                h6(class="card-subtitle mb-2 text-muted") Diameter
                p(class="card-text") #{planet.diameter ? planet.diameter : 'Not found'}

                h6(class="card-subtitle mb-2 text-muted") Gravity
                p(class="card-text") #{planet.gravity ? planet.gravity : 'Not found'}

                h6(class="card-subtitle mb-2 text-muted") Orbital period
                p(class="card-text") #{planet.orbital_period ? planet.orbital_period : 'Not found'}

                h6(class="card-subtitle mb-2 text-muted") Population
                p(class="card-text") #{planet.population ? planet.population : 'Not found'}

                h6(class="card-subtitle mb-2 text-muted") Terrain
                p(class="card-text") #{planet.terrain ? planet.terrain : 'Not found'}

        script(src='https://code.jquery.com/jquery-3.4.1.min.js')
        script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.15.0/umd/popper.min.js')
        script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js')